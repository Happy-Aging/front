<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<androidx.appcompat.widget.Toolbar
        android:id="@+id/result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_toolbar_height"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="김춘자"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="님의"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="낙상 사고 위험도는 "
                android:textSize="24sp"
                android:textColor="@color/DarkGray"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/textRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등급"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입니다"
                android:textSize="24sp"
                android:textColor="@color/DarkGray"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/viewRankIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/black"
                android:layout_alignTop="@id/progressBarDownload"
                android:layout_alignBottom="@id/progressBarDownload"
                android:visibility="invisible"/>


            <ProgressBar
                android:id="@+id/progressBarDownload"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progressDrawable="@drawable/progress_bar_gradient"
                android:max="5"
                android:progress="5"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/progressBarDownload"
                android:text="1\n위험"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textSize="15sp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBarDownload"
                android:layout_alignParentEnd="true"
                android:text="5\n안전"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#40A02A"
                android:textSize="15sp" />


        </RelativeLayout>
    </LinearLayout>

        <View
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textTitleSurveyResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결과요약"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/textSurveyResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="존경하는 어르신 여러분, 본 공간에서의 안전을 위하여 특별히 주의를 당부드립니다. 이곳은 미끄러움과 낙상의 위험이 있어 어르신들의 건강과 안전에 위협이 될 수 있습니다. 부디 걸음을 조심스럽게 옮기시고, 불편함이 있으시면 언제든지 주변의 도움을 요청하시길 바랍니다. 우리는 어르신들이 안전하고 편안한 환경에서 생활하실 수 있도록 최선을 다하겠습니다. 어르신들의 소중한 건강을 위하여, 주의 깊게 환경을 살피고, 늘 안전을 최우선으로 생각해 주시길 부탁드립니다. 여러분의 안전과 건강을 지키는 것이 우리의 가장 큰 책임임을 잊지 않겠습니다."
            android:textSize="20sp"
            android:lineSpacingExtra="3dp"

            android:layout_marginBottom="20dp"/>
        </ScrollView>
        </LinearLayout>
    </LinearLayout>
        <View
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="21dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 결과 다운받기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="자세한 AI 낙상 예방 솔루션을 문서로 확인할 수 있습니다."
                android:textColor="@color/DarkGray"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="검사 날짜"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2023년 11월 23"
                    android:textSize="18sp"
                    android:textColor="@color/DarkGray"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="파일 형식"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF"
                    android:textSize="18sp"
                    android:textColor="@color/DarkGray"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutDownPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="21dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="파일 다운 경로"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textDownPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF"
                    android:textSize="18sp"
                    android:textColor="@color/DarkGray"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <Button
                android:id="@+id/buttonDownloadReport"
                android:background="@drawable/rounded_orange_button"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보고서 다운로드"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>
